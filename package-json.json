{
  "name": "nodejs-scalable-api",
  "version": "1.0.0",
  "description": "A scalable Node.js REST API demonstrating non-blocking I/O and concurrent connection handling",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npm run test:unit && npm run test:load",
    "test:unit": "jest --coverage",
    "test:load": "node tests/load-test.js",
    "test:performance": "node tests/performance-test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "jsdoc -c jsdoc.conf.json",
    "benchmark": "autocannon -c 100 -d 30 http://localhost:3001/api/users"
  },
  "keywords": [
    "nodejs",
    "express",
    "api",
    "scalable",
    "rest",
    "concurrent",
    "non-blocking",
    "event-driven"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "autocannon": "^7.12.0",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nodejs-scalable-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nodejs-scalable-api/issues"
  },
  "homepage": "https://github.com/yourusername/nodejs-scalable-api#readme"
}